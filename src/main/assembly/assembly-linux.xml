<assembly
	xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

	<!--
		This file takes care of assembling the Linux distribution file.
	-->

	<id>all</id>
	<formats>
		<format>tgz</format>
	</formats>
	<baseDirectory>${project.artifactId}</baseDirectory>

	<files>
		<!-- Include dms.jar -->
		<file>
			<source>${project.build.directory}/${project.artifactId}.jar</source>
			<outputDirectory>.</outputDirectory>
			<fileMode>0644</fileMode>
			<lineEnding>keep</lineEnding>
		</file>

		<!-- Include executable script DMS.sh -->
		<file>
			<source>${project.external-resources}/${project.name.short}.sh</source>
			<fileMode>0755</fileMode>
			<lineEnding>unix</lineEnding>
		</file>
	</files>

	<fileSets>
		<!-- Include documentation -->
		<fileSet>
			<directory>${project.basedir}</directory>
			<outputDirectory>.</outputDirectory>
			<fileMode>0644</fileMode>
			<lineEnding>unix</lineEnding>
			<includes>
				<include>*.md</include>
				<include>*.txt</include>
			</includes>
		</fileSet>

		<!-- Include text-only resources and adjust line endings -->
		<fileSet>
			<directory>${project.external-resources}</directory>
			<outputDirectory>.</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>
			<lineEnding>unix</lineEnding>
			<includes>
				<include>plugins/**</include>
				<include>renderers/**</include>
				<include>*.*</include>
			</includes>
			<excludes>
				<exclude>*.bat</exclude>
			</excludes>
		</fileSet>

		<!--
			Include binary and mixed text/binary resources without
			adjusting line endings as this will corrupt binaries.
		-->
		<fileSet>
			<directory>${project.external-resources}</directory>
			<outputDirectory>.</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>
			<lineEnding>keep</lineEnding>
			<includes>
				<include>documentation/**</include>
				<include>web/**</include>
				<include>DummyInput.jpg</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>${project.binaries}/linux</directory>
			<outputDirectory>./linux</outputDirectory>
			<fileMode>0755</fileMode>
			<directoryMode>0755</directoryMode>
			<lineEnding>keep</lineEnding>
		</fileSet>
	</fileSets>
</assembly>
